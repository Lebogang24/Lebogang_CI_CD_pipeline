name: CI/CD Pipeline

on:
  push:
    branches:
      - main

jobs:
  build_and_deploy:
    name: Build and Deploy
    runs-on: windows-latest

    steps:
      - name: Checkout repository
        uses: actions/checkout@v2

      - name: Set up Node.js
        uses: actions/setup-node@v2
        with:
          node-version: '14'

      - name: Install dependencies
        run: npm ci

      - name: Build
        run: npm run build

      - name: Deploy
        run: |
          # Add your deployment steps here
          # Replace this with your actual deployment commands
          echo "Deploying..."

  notify_on_failure:
    name: Notify on Failure
    needs: [build_and_deploy]
    runs-on: windows-latest
    
    if: always() && (failure() || needs.build_and_deploy.result == 'failure')
    
    steps:
      - name: Send Notification
        run: |
          # Add your notification logic here
          # Replace this with your actual notification commands
          echo "Build or deployment failed! Notify the team."
